# shellcheck source=/dev/null
source "$(readlink --canonicalize "$(dirname "$0")/(init)")"
Qunity::Load::File "${BASE_DIR}/.env!"

docker-compose --file "${BASE_DIR}/docker-compose.yml" exec --user "${PROJECT_USER}" php composer "$@"
